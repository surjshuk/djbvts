// prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  reports   Report[]
}

model Report {
  id               String      @id @default(cuid())
  title            String      @default("Daily Distance Report")
  dateFrom         DateTime
  dateTo           DateTime
  generatedAt      DateTime    @default(now())
  generatedByEmail String
  verificationSlug String      @unique
  rows             ReportRow[]

  ownerId String?
  owner   User?   @relation(fields: [ownerId], references: [id])
}

model ReportRow {
  id       String @id @default(cuid())
  reportId String
  report   Report @relation(fields: [reportId], references: [id])

  area            String
  vehicleNo       String
  tankerType      String
  transporterName String
  // For SQLite: use Decimal without @db.Decimal(...)
  tripDistanceKm  Decimal
  engineHours     Decimal
  tripCount       Int
}

enum Role {
  USER
  ADMIN
}
